#primary.content-area
  / Related Content / Start
  #related-content.clearfix
    .container
      %h3.section-title You might also like...
      #carousel-2.jcarousel
        %ul
          %li{'ng-repeat' => 'podcast in requestControl.podcasts'}
            %article.hentry.post
              %a{:href => '', :rel => 'bookmark'}
                = image_tag "PSHQ-Entrepreneur-268-181.jpg", :class => 'entry-thumbnail'
              .entry-meta
                %span.entry-date {{podcast.air_date}}
              %h2.entry-title
                %a{:href => '', :rel => 'bookmark'} {{podcast.name}}

      %a.jcarousel-control-prev{:href => "#"}
        %i.fa.fa-chevron-left
      %a.jcarousel-control-next{:href => "#"}
        %i.fa.fa-chevron-right
    / .container
  / Related Content / End
  .container
    / More Content / Start
    #more-content
      %article.hentry.post
        %a.btn.btn-sm.btn-danger{:href => '/podcasts/{{requestControl.podcast.podcast_id}}/edit', :style => 'color: white;'} Edit Podcast
        .entry-content

        %h2.entry-title
          %a{:href => "", :rel => "bookmark"} {{requestControl.podcast.name}}
        .entry-meta
          %span.entry-date {{requestControl.podcast.air_date}}
        %a{:href => ""}
          = image_tag "PSHQ-Entrepreneur-Cover-Show.jpg"
        .byline
          %span.entry-view 89 Listens

        .byline
          .input-group
            %span.btn.input-group-addon.btn-sm.btn-success{"ng-click" => "requestControl.audio.play()", :style => 'color: white;', 'ng-if' => 'requestControl.audio.paused'} Play
            %span.btn.input-group-addon.btn-sm.btn-success{"ng-click" => "requestControl.audio.pause()", :style => 'color: white;', 'ng-if' => '!requestControl.audio.paused'} Pause
            %input.form-control{:max => "1", :min => "0", "ng-model" => "requestControl.audio.progress", :step => "0.01", :type => "range"}
            %span.btn.btn-sm.input-group-addon {{requestControl.audio.currentTime | trackTime}}
            %span.btn.btn-sm.input-group-addon {{(requestControl.audio.duration / 60.00).toFixed(2)}}

        .entry-summary
          {{requestControl.podcast.description}}

        .entry-share-icons
          %a{:href => "#", :title => "Twitter"}
            %i.fa.fa-twitter
          %a{:href => "#", :title => "Facebook"}
            %i.fa.fa-facebook
          %a{:href => "#", :title => "GooglePlus"}
            %i.fa.fa-google-plus
          %a{:href => "#", :title => "Pinterest"}
            %i.fa.fa-pinterest
          %a{:href => "#", :title => "LinkedIn"}
            %i.fa.fa-linkedin

      %br

      %article.hentry.post
        %fieldset
          %legend.section
            %h5
              %i.icon-lock{'ng-if' => '!requestControl.currentUser'}
              %i.icon-pencil{'ng-if' => 'requestControl.currentUser'}
              %strong{'ng-if' => '!requestControl.currentUser'}
                You must be logged in to post a comment.
              %strong{'ng-if' => 'requestControl.currentUser'}
                Comments

          .comment.clearfix{'ng-repeat' => 'comment in requestControl.podcast.comments'}
            %img.avatar{:alt => "", :src => "http://placehold.it/56x56"}
            .comment-des{:style => 'background-color: #f9f9f9;'}
              .arrow-comment
              .comment-by
                %p.author
                  %strong {{comment.user.full_name}}
                %p.date {{comment.post_date}}
                %span.reply
                  %a{:href => "#"} Reply
              %p
                {{comment.description}}

          .comment-des{:style => 'background-color: #f9f9f9;'}
            .arrow-comment
            %form
              .control-group
                %textarea.form-control{:placeholder => "Enter comment..", 'ng-model' => 'requestControl.newComment', :rows => 4}
              %br
              .form-actions
                %p
                  / .btn-group.no-margin{style: "float: right;"}
                  %button.btn.btn-sm.btn-success{'ng-click' => 'requestControl.postComment()'} Post Comment
        
    / More Content / End
