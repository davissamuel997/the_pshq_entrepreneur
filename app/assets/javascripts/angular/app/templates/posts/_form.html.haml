.content
  .col-md-12
    .panel
      .panel-body
        .viewcode-example
          %form.simple-form{:novalidate => "novalidate"}
            %fieldset
              %legend.section
                %h5
                  %i.icon-note
                  %strong General
                  %strong.pull-right.make-red * Required

              .control-group
                %label.control-label Name
                .controls.form-group
                  %input.form-control.input-sm{'ng-model' => 'requestControl.params.name', :type => 'text', :placeholder => 'Enter..'}

              .control-group{'ng-if' => 'requestControl.post'}
                %label.control-label Post Date
                %p.input-group
                  %input.form-control.input-sm{"close-text" => "Close", "date-disabled" => "disabled(date, mode)", "datepicker-options" => "postDatepicker.dateOptions", "datepicker-popup" => "{{postDatepicker.format}}", "is-open" => "postDatepicker.opened", "min" => "postDatepicker.minDate", 'show-weeks' => 'false', "ng-model" => "requestControl.params.post_date", :type => "text", :placeholder => "Select a post date.."}/
                  %span.input-group-sm.input-group-btn
                    %button.btn.btn-default{"ng-click" => "postDatepicker.open($event)", :type => "button"}
                      %i.glyphicon.glyphicon-calendar

              .control-group
                %label.control-label Summary
                .controls.form-group
                  %textarea.form-control.input-sm{'ng-model' => 'requestControl.params.summary', :type => 'text', :placeholder => 'Enter..', :rows => 8}

              .control-group
                %label.control-label Description
                .controls.form-group
                  %textarea.form-control.input-sm{'ng-model' => 'requestControl.params.description', :type => 'text', :placeholder => 'Enter..', :rows => 15}

            .form-actions
              %p
                .btn-group.no-margin{style: "float: right;"}
                  %button.btn.btn-sm.btn-default{"ng-click" => "requestControl.cancel()"} Cancel
                  %button.btn.btn-sm.btn-success{"ng-click" => "requestControl.updatePost()", 'ng-if' => 'requestControl.post'} Update Post
                  %button.btn.btn-sm.btn-success{"ng-click" => "requestControl.createPost()", 'ng-if' => '!requestControl.post'} Create Post

