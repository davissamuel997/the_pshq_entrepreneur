%html{:lang => "en", 'ng-app' => 'ThePshqEntrepreneur'}
  / <![endif]
  %head
    / Meta
    %base{:href => "/"}
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}
      %meta{:content => "TheWorld is a fresh and clean magazine website template which is beautiful and well-organized", :name => "description"}
        %meta{:content => "magazine template, news template", :name => "keywords"}
          %meta{:content => "themejunkie", :name => "author"}
            / Title
            %title ThePSHQEntrepreneur

            = stylesheet_link_tag "jquery-ui-1.11.2.custom.css"
            = stylesheet_link_tag 'gritter/jquery.gritter.css'
            = stylesheet_link_tag "chosen.css"
            = stylesheet_link_tag "angular/app/plugins/slick-carousel/slick/slick.css"
            = stylesheet_link_tag "angular/app/plugins/slick-carousel/slick/slick-theme.css"
            = stylesheet_link_tag "theme/world-theme-include.css"
            = stylesheet_link_tag "theme2/theme2.css"

  %body

    / Page / Start
    #page.hfeed.site.clearfix
      / Site Main / Start
      %main#main.site-main{:role => "main"}

        %header#masthead.site-header.clearfix{:role => "banner"}
          .container
            #logo.no-padding
              %a{:href => "/"}
                = image_tag "PSHQ-logo-bigger.jpg"

            / Primary Navigation / Start
            %nav#primary-nav
              %ul#primary-menu.sf-menu
                %li
                  %a{:href => "single_page.html"}
                    Behind PSHQ
                    %span.menu-desc Learn About the Business
                %li
                  %a{:href => "/meet_the_hosts"}
                    About Your Hosts
                    %span.menu-desc Meet Them
                %li
                  %a{:href => "/contact_pshq"}
                    Contact Us
                    %span.menu-desc Get In Touch
                %li
                  %a{:href => "single_page.html"}
                    Visit PSHQ
                    %span.menu-desc Check Us Out

            / Primary Navigation / End
            .clearfix
        / Masthead / End
        / Secondary Bar / Start
        #secondary-bar
          .container.clearfix
            %a#secondary-mobile-menu{:href => "#"}
              %i.fa.fa-bars
              %span Secondary Menu
            / Secondary Navigation / Start
            %nav#secondary-nav
              %ul#secondary-menu.sf-menu
                %li.current_item
                  %a{:href => "/"} Home
                %li
                  %a{:href => "/podcasts"} Podcasts
                %li
                  %a{:href => "/posts"} Posts
                  
                %li.pull-right{'ng-controller' => 'SessionsController'}
                  - if !current_user
                    %a{:href => '', 'ng-click' => 'requestControl.goToLogin()'}
                      Login
                      %i.fa.icon-lock
                  - else
                    %a{:href => '', 'ng-click' => 'requestControl.sign_out()'}
                      Sign Out
            / Secondary Navigation / End
        / Secondary Bar / End

        = yield

    = javascript_include_tag "modernizr-2.5.3.min"
    
    / jquery and friends
    = javascript_include_tag "jquery/jquery-2.1.1.js"
    = javascript_include_tag "jplayer/jquery.jplayer.min.js"
    = javascript_include_tag "jquery/jquery-ui-1.11.2.custom.js"
    = javascript_include_tag "jquery/jquery.gritter.min.js"
    = javascript_include_tag "jquery/jquery.icheck.js"
    = javascript_include_tag "jquery/jquery.sparkline.js"
    = javascript_include_tag "jquery/jquery.slimscroll.js"
    = javascript_include_tag "jquery/jquery.dataTables.min.js"
    = javascript_include_tag "jquery/jquery.metisMenu.js"
    = javascript_include_tag "jquery/hoverIntent.js"
    = javascript_include_tag "jquery/superfish.js"
    = javascript_include_tag "jquery/jquery.jcarousel.min.js"
    = javascript_include_tag "jquery/jquery.sidr.min.js"
    = javascript_include_tag "jquery/jquery.custom.js"

    / backbone and friends
    = javascript_include_tag "backbone/underscore-min.js"
    = javascript_include_tag "backbone/backbone-min.js"
    = javascript_include_tag "backbone/backbone.localStorage-min.js"

    = javascript_include_tag "theme/theme.js"
    = javascript_include_tag "angular/app/angular_import.js"
    = javascript_include_tag "application"


